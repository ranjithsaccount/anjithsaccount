Docker-registry:

kubectl create secret docker-registry dockerhub --docker-server=https://index.docker.io/v1/ --docker-username=ranjithsaccount --docker-password= --docker-email=

Generic:

kubectl create secret generic secpasswd --from-literal=mysqlpassword=abcd
kubectl create secret generic mysqlpasswd --from-file=passwd [echo -n "abcd@123" > passwd]

